{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "dist",
        "module": "CommonJS",
        "noImplicitAny": true,
        "lib": ["ES2015", "ES7", "ES6", "dom"],
        "outDir": "./dist",
        "target": "es5",
        "moduleResolution": "node"
    },
    "typedocOptions": {
        "mode": "modules",
        "out": "docs"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules", "dist"]
}